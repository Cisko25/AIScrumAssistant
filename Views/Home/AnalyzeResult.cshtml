@{
    var ticket = ViewBag.Ticket as ScrumAssistant.Services.JiraTicket;
    var result = ViewBag.Result as string;
    var commentResult = ViewBag.CommentResult as string;
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />


<h2>Analysis for @ticket.Key - @ticket.Summary</h2>

<pre>@result</pre>

@if (!string.IsNullOrEmpty(commentResult))
{
    <div style="color:green; font-weight:bold; margin-bottom:15px;">@commentResult</div>
}

<div class="d-flex align-items-center mt-3">
    <form asp-action="CommentToJira" method="post" class="me-3 mb-0">
        <input type="hidden" name="key" value="@ticket.Key" />
        <input type="hidden" name="summary" value="@ticket.Summary" />
        <input type="hidden" name="description" value="@ticket.Description" />
        <input type="hidden" name="analysis" value="@result" />
        <button type="submit" class="btn btn-primary">Comment result to Jira ticket</button>
    </form>
    <a href="/" class="btn btn-link">Back to list</a>
</div>

